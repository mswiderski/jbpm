<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:orm="http://java.sun.com/xml/ns/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd 
                      http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">

  <persistence-unit name="org.jbpm.services.task" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>jdbc/jbpm-ds</jta-data-source> 
    <mapping-file>META-INF/Taskorm.xml</mapping-file>
    <mapping-file>META-INF/TaskAuditorm.xml</mapping-file>

    <class>org.jbpm.services.task.audit.impl.model.AttachmentImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.ContentImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.BooleanExpressionImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.CommentImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.DeadlineImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.CommentImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.DeadlineImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.DelegationImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.EscalationImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.GroupImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.I18NTextImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.NotificationImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.EmailNotificationImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.EmailNotificationHeaderImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.PeopleAssignmentsImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.ReassignmentImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.TaskImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.TaskDataImpl</class>
    <class>org.jbpm.services.task.audit.impl.model.UserImpl</class>
    
    <!--BAM for task service -->
    <class>org.jbpm.services.task.audit.impl.model.BAMTaskSummaryImpl</class>
    
    <!-- Event Classes -->
    <class>org.jbpm.services.task.audit.TaskEventImpl</class>
   
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

      <property name="hibernate.max_fetch_depth" value="3" />
      <property name="hibernate.hbm2ddl.auto" value="create-drop" />
      <property name="hibernate.show_sql" value="false" />

      <!-- BZ 841786: AS7/EAP 6/Hib 4 uses new (sequence) generators which seem to cause problems -->      
      <property name="hibernate.id.new_generator_mappings" value="false" /> 
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.BitronixJtaPlatform" />           
    </properties>
  </persistence-unit>
  
</persistence>
